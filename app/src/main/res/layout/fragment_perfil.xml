<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".views.fragment.Perfil">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="110dp"
        android:src="@drawable/img"/>

    <ImageButton
        android:id="@+id/create_account_add_photo_bt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="220dp"
        android:background="@drawable/create_acount_photo_btn_shape"
        android:src="@drawable/ic_troca_foto_minuatura"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/create_account_photo"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="145dp"
        android:layout_marginLeft="217dp"
        app:civ_border_color="@color/default_orange_opaque"
        app:civ_border_width="0.5dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nome_perfil_edit"
        style="@style/email_edit_text"
        android:layout_marginTop="220dp"
        app:startIconDrawable="@drawable/ic_login_user"
        android:hint="Nome Completo"
        app:layout_constraintTop_toBottomOf="@id/login_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:drawableEnd="@drawable/ic_edit_text"
            android:inputType="textEmailAddress"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_perfil_edit"
        style="@style/email_edit_text"
        android:layout_marginTop="310dp"
        app:startIconDrawable="@drawable/ic_email"
        android:hint="Email"
        app:layout_constraintTop_toBottomOf="@id/login_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:drawableEnd="@drawable/ic_edit_text"
            android:inputType="textEmailAddress"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cidade_perfil_edit"
        style="@style/email_edit_text"
        android:layout_marginTop="400dp"
        app:startIconDrawable="@drawable/ic_home"
        android:hint="Cidade"
        app:layout_constraintTop_toBottomOf="@id/login_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:drawableEnd="@drawable/ic_edit_text"
            android:inputType="textEmailAddress"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cargo_perfil_edit"
        style="@style/email_edit_text"
        android:layout_marginTop="490dp"
        app:startIconDrawable="@drawable/ic_job"
        android:hint="Cargo"
        app:layout_constraintTop_toBottomOf="@id/login_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:drawableEnd="@drawable/ic_edit_text"
            android:inputType="textEmailAddress"/>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_perfil_salvar"
        style="@style/default_button_style"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Salvar"
        android:textSize="12pt"
        android:layout_marginTop="580dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>




</FrameLayout>