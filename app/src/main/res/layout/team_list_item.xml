<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/team_list_item_user_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_login_user"
        android:layout_marginStart="10dp"
        app:tint="@color/grey" />

    <TextView
        android:id="@+id/team_list_item_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carlos"
        style="@style/default_font_body"
        android:textSize="6pt"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/team_list_item_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09G41F"
        style="@style/default_font_body"
        android:textSize="6pt"
        android:layout_marginStart="20dp"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"/>

    <ImageButton
        android:id="@+id/team_list_delete_employee_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        style="@style/default_button_style"
        android:src="@drawable/ic_baseline_delete_24"
        android:layout_marginEnd="10dp" />
</LinearLayout>