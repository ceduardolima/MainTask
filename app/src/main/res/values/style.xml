<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="default_font_activity_title">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="default_font_title">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <style name="default_font_subtitle">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <style name="default_font_body">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <style name="default_button_style">
        <item name="android:background">@drawable/default_button_shape</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="default_textbutton_style">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/default_button_color_opaque</item>
        <item name="android:textSize">12sp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="task_item_container_style">
        <item name="android:background">@drawable/default_task_item_shape</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="task_item_marker">
        <item name="android:background">@drawable/task_item_marker_shape</item>

    </style>

    <style name="task_item_details">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">8pt</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/default_text_color</item>
    </style>
</resources>