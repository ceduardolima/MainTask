<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="default_font_activity_title">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textSize">14pt</item>
    </style>

    <style name="default_font_title">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">12pt</item>
    </style>

    <style name="default_font_subtitle">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">10pt</item>
    </style>

    <style name="default_font_body">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">8pt</item>
    </style>

    <style name="default_button_style">
        <item name="android:background">@drawable/default_button_shape</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="default_textbutton_style">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/default_orange</item>
        <item name="android:textSize">8pt</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="task_item_container_style">
        <item name="android:background">@drawable/default_task_item_shape</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:elevation">3dp</item>
    </style>

    <style name="task_item_marker">
        <item name="android:background">@drawable/task_item_marker_shape</item>

    </style>

    <style name="task_item_details">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">6pt</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <style name="login_edit_text" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="colorPrimary">@color/default_orange</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">8pt</item>
        <item name="hintTextColor">@color/default_orange</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/login_textedit_border_color</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="add_member_edit_text" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="colorPrimary">@color/default_orange</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">8pt</item>
        <item name="hintTextColor">@color/default_orange</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/textedit_add_member_border_color</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="task_arrow">
        <item name="android:src">@drawable/ic_arrow</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>


    <style name="email_edit_text" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="colorPrimary">@color/default_orange</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">8pt</item>
        <item name="hintTextColor">@color/default_orange</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/email_textedit_border_color</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="navbar_button_style">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:background">@drawable/navbar_button_shape</item>
        <item name="android:backgroundTint">@color/navbar_item</item>
        <item name="android:tint">#ffffff</item>
    </style>


</resources>